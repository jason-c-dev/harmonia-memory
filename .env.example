# Harmonia Memory Storage System Environment Variables
# Copy this file to .env and modify values as needed

# Database Configuration
DATABASE_PATH=./data/harmonia.db
DATABASE_BACKUP_ENABLED=true

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security Configuration
API_SECRET_KEY=your-secret-key-here-change-me
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_LLM=false

# Memory Configuration
MEMORY_CONFIDENCE_THRESHOLD=0.7
CONFLICT_RESOLUTION_STRATEGY=update
DEFAULT_TIMEZONE=UTC

# Cache Configuration
CACHE_ENABLED=true
MEMORY_CACHE_SIZE=1000
SEARCH_CACHE_TTL=300

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Export Configuration
MAX_EXPORT_SIZE=100000
EXPORT_COMPRESSION=true